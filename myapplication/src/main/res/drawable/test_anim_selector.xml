<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/checked"
        android:state_selected="true">

        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>

    <item
        android:id="@+id/checked_off"
        android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#0000FF" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
    <transition
        android:reversible="false"
        android:fromId="@+id/checked_off"
        android:toId="@+id/checked">
        <animation-list>
            <item android:duration="300">
                <shape android:shape="rectangle">
                    <solid android:color="#FF9800" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item android:duration="300">
                <shape android:shape="rectangle">
                    <solid android:color="#5C5E67" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item android:duration="300">
                <shape android:shape="rectangle">
                    <solid android:color="#339A37" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>
        </animation-list>
    </transition>


    <transition
        android:reversible="false"
        android:fromId="@+id/checked"
        android:toId="@+id/checked_off">
        <animation-list>
            <item android:duration="300">
                <shape android:shape="rectangle">
                    <solid android:color="#FF9800" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item android:duration="300">
                <shape android:shape="rectangle">
                    <solid android:color="#5C5E67" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item android:duration="300">
                <shape android:shape="rectangle">
                    <solid android:color="#339A37" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>
        </animation-list>
    </transition>

</animated-selector>